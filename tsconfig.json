{
  "include": ["global.d.ts", "src/**/*"],
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "Node16",
    "target": "ES2021",
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  }
}
